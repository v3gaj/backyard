      <span><i class="fa fa-phone-square"></i>8888-8888</span>
      <span><i class="fa fa-envelope"></i><a href="mailto:info@caffora.cafe">info@telescopehr.com</a></span>
      <span><i class="fa fa-building"></i>Heredia, Costa Rica</span>
    </div>
    <div class="col-lg-8 col-sm-12 float-left contact-form-wrapper">
      <%= render :file => '/messages/new' %>
    </div>
  </div>
</div>
