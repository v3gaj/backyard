<div class="view-head">
  <h2 class="animation" data-animation="animated fadeInRight">Contact</h2>
</div>
<div class="contact-wrapper">
  <div class="container">
    <div class="page-head-right">
      <div class="head-info">
        <h1 class="animation" data-animation="animated fadeInLeft">Our Contacts</h1>
        <h6 class="animation" data-animation="animated fadeInLeft">How to contact us</h6>
      </div>
    </div>
  </div>
  <div style='width: 100%;' class="animation" data-animation="animated fadeInUp">
